{
  "extends": [
    "config:base"
  ],
  "baseBranches": [
    "master",
    "beta",
    "2.x",
    "1.x"
  ],
  "dependencies": {
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  "devDependencies": {
    "automerge": true,
    "major": {
      "automerge": false
    }
  },
  "separatePatchReleases": true,
  "packageRules": [
    {
      "depTypeList": [
        "devDependencies"
      ],
      "packagePatterns": [
        "@types/"
      ],
      "automerge": false
    }
  ],
  "statusCheckVerify": true,
  "ignoreDeps": [
    "@types/node"
  ]
}
